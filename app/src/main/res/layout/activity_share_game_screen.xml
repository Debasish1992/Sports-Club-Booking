<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShareGameScreen">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Temamate Requests" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvSuccesMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:text="Game Successfully Created." />

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_success"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvSuccesMessage"
        android:id="@+id/ivSuccessImg"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvDeepLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivSuccessImg"
        android:text="Share your game with Friends." />


    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_share_grey_500_48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvDeepLink"
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Game Successfully Created."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivShare"
        android:id="@+id/tvDeepLinkShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:text="Go Back Home"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_below="@+id/tvDeepLinkShare"
        android:id="@+id/btnGoback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>