<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lyt_item_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_rectangle_green"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:maxWidth="240dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="hello, hello!"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text_msg_time_send"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text_message_send"
            android:layout_below="@+id/text_message_send"
            android:paddingBottom="5dp"
            android:text="11:40 PM"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_item_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image_message_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/circle"
            android:src="@drawable/icon_sample_profile" />

        <TextView
            android:id="@+id/text_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_message_profile"
            android:fontFamily="@string/font_roboto_regular"
            android:text="John Doe"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_message_name"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/image_message_profile"
            android:background="@drawable/rounded_rectangle_pink"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_message_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:maxWidth="240dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="hi man, how are you?"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/text_msg_time_receive"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/text_message_receive"
                android:layout_below="@+id/text_message_receive"
                android:paddingBottom="5dp"
                android:text="11:40 PM"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>