<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_sample_profile"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="0.5dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_profile_pic"
        android:text="dsadsadsadsadsad"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPrimarySport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_profile_pic"
        android:text="dsadsadsa"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/layAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPrimarySport"
        android:layout_below="@+id/tvPrimarySport"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/md_red_400"
            style="?android:attr/borderlessButtonStyle"
            android:text="Decline" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="@color/md_green_500"
            style="?android:attr/borderlessButtonStyle"
            android:text="Accept" />


    </LinearLayout>


</RelativeLayout>